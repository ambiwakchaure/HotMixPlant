<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".activity.SmsHistoryActivity">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="30pt"
                  android:weightSum="4"
                  android:background="@color/colorPrimaryDark"
                  android:orientation="horizontal">

        <ImageView android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_height="13pt"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:src="@drawable/ic_arrow_back_black_24dp"
                   android:id="@+id/go_back"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:layout_weight="3"
                  android:fontFamily="@font/samsungsansbold"
                  android:textColor="@color/colorWhite"
                  android:textSize="12pt"
                  android:paddingLeft="5pt"
                  android:text="Message History"/>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:id="@+id/message_history_rv"></android.support.v7.widget.RecyclerView>

</LinearLayout>